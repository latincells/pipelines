process {
    container = 'adolforojas/latincells:Seurat5'
    memory = 100.GB
    withName: Cellranger {
        container = 'adolforojas/latincells:Cellranger'
        memory = 92.GB // si al colocar maxForks=2 la suma pasa la memoria total solo se ejecutara una instancia
    }
    withName: CellTypist {
        container = 'adolforojas/latincells:Celltypist'
        memory = 90.GB
    }
    withLabel: Demultiplex {
    container = 'adolforojas/latincells:Demultiplex'
    }
}

docker {
//  enabled = false
    fixOwnership = true
}

singularity {
   //enabled = true
    ociMode = true
}

timeline {
    enabled = true
    file = 'Timeline.html'
    overwrite = true
}

report {
    enabled = true
    file = 'Report.html'
    overwrite = true
}

dag {
    enabled = true
    file = 'DAG.html'
    overwrite = true
    verbose = true
}